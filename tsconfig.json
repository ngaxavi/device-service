{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@device/logger": ["src/logger"],
      "@device/config": ["src/config"],
      "@device/auth": ["src/auth"],
      "@device/validation": ["src/validation"],
      "@device/kafka": ["src/kafka"]
    }
  }
}
